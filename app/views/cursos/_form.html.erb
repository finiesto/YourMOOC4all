<div class="col-md-12">
  <div class="well col-md-12 col-md-offset-0">
    <%= form_for(@curso, :html => { :class => "form-horizontal" }) do |f| %>
      <% if @curso.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <h4><%= I18n.t("errors.messages.not_saved", :count => @curso.errors.count, :resource => "curso") %></h4>

          <ul>
          <% @curso.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label t('mio.curso_oculto'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.check_box :oculto %> <span class=''> <%= t('mio.oculto') %></span> 
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('mio.curso_identificador'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :identificador, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :url, :class => "col-sm-2 control-label" %>
        <div class="col-sm-5">
          <%= f.text_field :url, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('mio.curso_nombre'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :nombre, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :imagen_url, :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :imagen_url, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('mio.curso_plataforma'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-4">
          <%= f.select :proveedor_id, Proveedor.all.collect {|p| [ p.nombre, p.id ] }, { include_blank: true }, {:class => "selectpicker", 'data-width' => "100%", 'data-dropupauto' => "false"} %>
        </div>
        <%= f.label t('mio.curso_institucion'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-4" >
          <%= f.select :universidad_id, Universidad.all.order('nombre').collect {|p| [ p.nombre, p.id ] }, { include_blank: true }, {:class => "selectpicker", 'data-width' => "100%", 'data-dropupauto' => "false"} %>
          <%#= f.text_field :universidad_nombre, 
               :class => "desplegable form-control typeahead",
               :valor_inicial => "",
               :datos_consulta => listado_universidades_url, 
               :placeholder => 'Seleccionar el tipo de dato predefinido.' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('mio.curso_tematica'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :tematica, :rows => '5', :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('mio.curso_informacion'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :informacion, :rows => '10', :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('mio.curso_objetivos'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :objetivos, :rows => '3', :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('mio.curso_conocimientos'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :conocimientos_previos, :rows => '3', :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('mio.curso_destinatarios'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :destinatarios, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('mio.curso_actividades'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :evaluacion, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('mio.curso_esfuerzo'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-5">
          <%= f.text_field :esfuerzo_estimado, :class => "form-control" %>
        </div>

        <%= f.label t('mio.curso_precio_auditado'), :class => "col-sm-3 control-label" %>
        <div class="col-sm-2">
          <%= f.text_field :precio_auditado, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('mio.curso_proxima'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-5">
          <%= f.text_field :inicio, :class => "form-control" %>
        </div>

        <%= f.label t('mio.curso_precio_credencial'), :class => "col-sm-3 control-label" %>
        <div class="col-sm-2">
          <%= f.text_field :precio_credencial, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('mio.curso_signos'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.check_box :lenguaje_signos, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label t('mio.curso_edicion_anterior'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.select :edicion_anterior_id, @listado_cursos, { include_blank: true }, {:class => "selectpicker", 'data-width' => "100%", 'data-dropupauto' => "false"} %>
          <%#= f.select :edicion_anterior_id, Curso.all.collect {|p| [ p.nombre, p.id ] }, { include_blank: true }, {:class => "selectpicker", 'data-width' => "100%", 'data-dropupauto' => "false"} %>

        </div>
      </div>

      <div class="panel-footer">
        <button type="submit" class="btn btn-primary" id="boton_aceptar">
          <i class="glyphicon glyphicon-ok-sign"></i> 
          <%= @curso.new_record? ? "#{t('helpers.links.create')} #{t('mio.curso')}" : "#{t('helpers.links.update')} #{t('mio.curso')}" %>
        </button>
        <%= link_to cursos_path, :class => 'btn btn-default' do %>
          <span class="glyphicon glyphicon-remove-sign"></span>
          <%= t('helpers.links.cancel') %>
        <% end %>
      </div>

    <% end %>
  </div>
</div>
