<% breadcrumb :identificar_usuario %>

<div id='buscador' class='col-lg-8 col-md-7 col-sm-6 col-xs-12'>

	<h2><%= t('mio.identificarse') %></h2>

	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { :class => "form-horizontal" }) do |f| %>

	  <div class="form-group">
	    <%= f.label :email, :for => 'user_email', :class => "col-sm-2 control-label" %>
	    <div class="col-sm-9">
	      <%= f.email_field :email, :class => "form-control" %> 
	    </div>
	  </div>

	  <div class="form-group">
	    <%= f.label t('mio.password'), :for => 'user_password', :class => "col-sm-2 control-label" %>
	    <div class="col-sm-9">
	      <%= f.password_field :password, required: false, :class => "form-control" %>
	    </div>
	  </div>

	  <div class="form-group">
	    <%= f.label t('mio.recuerdame'), :for => 'user_remember_me', :class => "col-sm-2 control-label" %>
	    <div class="col-sm-10">
	      <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %> 
	    </div>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, t('mio.identificarse'), :class => 'btn btn-default' %>
	  </div>
	<% end %>
</div>
<%#= render "devise/shared/links" %>
