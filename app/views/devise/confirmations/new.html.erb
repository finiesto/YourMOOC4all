<div id='buscador'>

  <h2><%= t('.resend_confirmation_instructions') %></h2>

  <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :confirmation_token %>

    <div class="form-group">
      <%= f.label :email, required: true, autofocus: true, :class => "col-sm-2 control-label" %>
      <div class="col-sm-9">
        <%= f.email_field :email, :class => "form-control" %> 
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t('.resend_confirmation_instructions'), :class => 'btn btn-default' %>
    </div>
  <% end %>

</div>

<%#= render "devise/shared/links" %>


