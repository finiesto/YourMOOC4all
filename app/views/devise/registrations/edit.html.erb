<% breadcrumb :editar_usuario %>
<div id='buscador'>
  <div class='col-lg-8 col-md-7 col-sm-6 col-xs-12'>

  <h2><%= t('mio.editar_usuario') %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-group">
      <%= f.label :email, :class => "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.email_field :email, required: true, autofocus: true, :class => "form-control" %> 
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p><%= t('mio.esperando_confirmacion') %> <%= resource.unconfirmed_email %></p>
    <% end %>

    <div class="form-group">
      <%= f.label t('mio.password'), :for => 'user_password', :class => "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: 'off', placeholder: t('mio.placeholder_dejela'), required: false, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label t('mio.confirme_password'), :for => 'user_password_confirmation', :class => "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, required: false, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :current_password, :for => 'user_current_password', :class => "col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.password_field t('mio.current_password'), placeholder: t('mio.placeholder_necesitamos'), required: true, :class => "form-control", :id => 'user_current_password' %>
      </div>
    </div>

    <div class="form-actions">
      <div class="col-sm-12">
        <%= f.button :submit, t('mio.actualizar'), :class => 'btn btn-default' %>
      </div>
    </div>
  <% end %>
  </div>
</div>

<div id='cuenta'class='row col-lg-4 col-md-5 col-sm-6 col-xs-12 text-center'>
  <div class='jumbotron'>

    <h3><%= t('mio.cancelar_cuenta') %></h3>

    <p><%= t('mio.no_contento') %> </p>
    <p><%= link_to t('mio.cancelar_cuenta'), registration_path(resource_name), data: { confirm: t('mio.estas_seguro') }, method: :delete, :class => 'btn btn-default' %></p>

    <%= link_to t('mio.volver'), :back, :class => 'btn btn-default' %>
  </div>
</div>

