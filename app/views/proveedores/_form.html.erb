<div class="col-md-12">
  <div class="well col-md-12 col-md-offset-0">
    <%= form_for(@proveedor, :html => { :class => "form-horizontal" }) do |f| %>
      <% if @proveedor.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <h4><%= I18n.t("errors.messages.not_saved", :count => @proveedor.errors.count, :resource => "proveedor") %></h4>

          <ul>
          <% @proveedor.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label t('mio.curso_nombre'), :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :nombre, :class => "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :url, :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :url, :class => "form-control" %>
        </div>
      </div>
      
      <div class="panel-footer">
        <button type="submit" class="btn btn-primary" id="boton_aceptar">
          <i class="glyphicon glyphicon-ok-sign"></i> 
          <%= @proveedor.new_record? ? "#{t('helpers.links.create')} #{t('mio.plataforma')}" : "#{t('helpers.links.update')} #{t('mio.plataforma')}" %>
        </button>
        <%= link_to proveedores_path, :class => 'btn btn-default' do %>
          <span class="glyphicon glyphicon-remove-sign"></span>
          <%= t('helpers.links.cancel') %>
        <% end %>
      </div>

    <% end %>
  </div>
</div>
