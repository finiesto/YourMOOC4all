<tr>
  <% if user.email == current_user.email or current_user.roles.include?(Role.find_by_name('administrador')) %> 
		<td> <%= link_to(user.email, user) %> </td>
	<% else %>
		<td> <%= user.email %> </td>
	<% end %>

  <td class="hidden-xs" style="text-align:center;"> <%= '<span class="glyphicon glyphicon-ok"></span>'.html_safe if user.has_role? :administrador %> </td>
  <td class="hidden-xs" style="text-align:center;"> <%= '<span class="glyphicon glyphicon-ok"></span>'.html_safe if user.has_role? :usuario  %> </td>
  <td class="hidden-xs" style="text-align:center;"> <%= '<span class="glyphicon glyphicon-ok"></span>'.html_safe if user.has_role? :invitado %> </td>
</tr>
