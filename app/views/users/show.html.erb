<% breadcrumb :usuario, @user %>

<%- model_class = User -%>
<div class="col-md-12">
	<div class="well col-md-12">
    <% if @user.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h4><%= I18n.t("errors.messages.not_destroy", :count => @user.errors.count, :resource => "user") %></h4>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col-md-12">
      <div class="col-md-6">
				<%= @user.email %><br />
				<%= @user.reset_password_sent_at %><br />
				<%= @user.current_sign_in_at %><br />
				<%= @user.last_sign_in_at %><br />
				<%= @user.current_sign_in_ip %><br />
				<%= @user.last_sign_in_ip %>
			</div>
		</div>

		<div class="panel-footer col-md-12">
		  <%= link_to users_path, :class => 'btn btn-default' do %>
		    <span class="glyphicon glyphicon-list-alt"></span>
		    <%= t('.back', :default => t("helpers.links.back", :default => 'Volver')) %>
		  <% end %>
		  <%= link_to edit_user_path(@user), :class => 'btn btn-primary' do %>
		    <span class="glyphicon glyphicon-pencil"></span>
		    <%= t('.edit', :default => t("helpers.links.edit", :default => 'Editar')) %>
		  <% end %>
		  <%= link_to user_path(@user), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => "Â¿Eliminar el usuario '#{@user.email}'?")) }, :class => 'btn btn-danger', :id => 'boton_borrar' do %>
		    <span class="glyphicon glyphicon-trash"></span>
		    <%= t('.destroy', :default => t("helpers.links.destroy")) %>
		  <% end %>
		</div>
	</div>
</div>

<div class="col-md-12">
  <div class="well">
    <h3><%= t('mio.user_show') %></h3>
    <% unless @evaluaciones.nil? -%>
      <% unless @evaluaciones.empty? -%>
        <%= render partial: "evaluaciones/tabla3", locals: {registros: @evaluaciones} %>
      <% end -%>
    <% end -%>
  </div>
</div>

