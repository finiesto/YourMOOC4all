<div class="col-md-12">
  <div class="well col-md-12 col-md-offset-0">
    <%= form_for(@idioma, :html => { :class => "form-horizontal" }) do |f| %>
      <% if @idioma.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <h4><%= I18n.t("errors.messages.not_saved", :count => @idioma.errors.count, :resource => "idioma") %></h4>

          <ul>
          <% @idioma.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <div class="form-group">
          <%= f.label t('mio.campo_descripcion'), :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :descripcion, :class => "form-control" %>
          </div>
      </div>
      <div class="panel-footer">
        <button type="submit" class="btn btn-primary" id="boton_aceptar">
          <i class="glyphicon glyphicon-ok-sign"></i> 
          <%= @idioma.new_record? ? "#{t('helpers.links.create')} #{t('mio.idioma')}" : "#{t('helpers.links.update')} #{t('mio.idioma')}" %>
        </button>
        <%= link_to idiomas_path, :class => 'btn btn-default' do %>
          <span class="glyphicon glyphicon-remove-sign"></span>
          <%= t('helpers.links.cancel') %>
        <% end %>
      </div>

    <% end %>
  </div>
</div>