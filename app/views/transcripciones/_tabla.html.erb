    <div class="pagination">
      <%= will_paginate registros, renderer: BootstrapPagination::Rails %>
    </div>

    <table class="table table-condensed table-striped table-hover">
      <thead>
        <tr>
        <th><%= t('mio.evaluacion_curso') %></th>
        <th><%= t('mio.evaluacion_idioma') %></th>
      </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, registros) do |transcripcion| %>
          <td><%= link_to transcripcion.curso, transcripcion %></td>
          <td><%= link_to transcripcion.idioma, edit_transcripcion_path(transcripcion) %></td>
        <% end -%>
      </tbody>
    </table>

    <div class="pagination">
      <%#= will_paginate registros, renderer: BootstrapPagination::Rails %>
    </div>
